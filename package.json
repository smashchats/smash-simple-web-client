{
    "name": "smash-web-client",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "description": "A minimal web client implementation of the Smash Protocol using React, TypeScript, and Vite",
    "scripts": {
        "dev": "vite --mode development",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint . --ext ts,tsx --fix",
        "format": "prettier --write .",
        "test": "playwright test",
        "test:ui": "playwright test --ui",
        "test:debug": "playwright test --debug",
        "test:report": "playwright show-report",
        "prepare": "husky",
        "lint-staged": "lint-staged"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "author": "USL Unstatic Labs",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/smashchats/smash-web-client"
    },
    "dependencies": {
        "smash-node-lib": "./smash-node-lib/",
        "@lucide/lab": "^0.1.2",
        "@protobufjs/inquire": "^1.1.0",
        "@radix-ui/react-avatar": "^1.1.3",
        "@radix-ui/react-dialog": "^1.1.6",
        "@radix-ui/react-slot": "^1.1.2",
        "@tailwindcss/vite": "^4.1.3",
        "assert": "^2.1.0",
        "buffer": "^6.0.3",
        "events": "^3.3.0",
        "idb": "^8.0.2",
        "lucide": "^0.479.0",
        "lucide-react": "^0.479.0",
        "path-browserify": "^1.0.1",
        "process": "^0.11.10",
        "radix-ui": "^1.1.3",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "tailwindcss": "^4.1.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@playwright/test": "^1.51.1",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@vitejs/plugin-react": "^4.3.4",
        "crypto-browserify": "^3.12.1",
        "dotenv": "^16.4.7",
        "eslint": "^9.21.0",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^15.15.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.11",
        "prettier": "^3.5.3",
        "stream-browserify": "^3.0.0",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.24.1",
        "util": "^0.12.5",
        "vite": "^6.2.0",
        "vite-plugin-node-polyfills": "^0.23.0"
    }
}
